{
  "name": "pvonweb-backend",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "cross-env NODE_ENV=production ts-node index.ts",
    "testStart": "cross-env NODE_ENV=test ts-node index.ts",
    "devStart": "nodemon index.ts",
    "test-ci": "concurrently --kill-others -s first \"wait-on http://localhost:3001 && npm run test\" \"npm run testStart\"",
    "test": "jest --forceExit --detectOpenHandles --runInBand --testTimeout=10000 --verbose",
    "lint": "eslint \"**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"**/*.{ts,tsx}\" --fix",
	"swagger": "node ./docs/swagger.ts"
  },
  "dependencies": {
    "@typescript-eslint/parser": "^5.59.8",
    "argon2": "^0.30.3",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "debug": "~2.6.9",
    "dotenv": "^16.0.3",
    "express": "~4.18.2",
    "jsonwebtoken": "^9.0.0",
    "mysql2": "^3.2.0",
    "node-fetch": "^2.6.7",
    "nodemailer": "^6.9.1",
    "pdf-creator-node": "^2.3.5",
    "ts-node": "^10.9.1",
    "typeorm": "^0.3.16"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.3",
    "concurrently": "^8.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.39.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.20",
    "supertest": "^6.3.3",
    "swagger-autogen": "^2.23.1",
    "swagger-ui-express": "^4.6.3",
    "wait-on": "^7.0.1"
  },
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      "node_modules/**/node_modules"
    ],
    "delay": "2500",
    "env": {
      "NODE_ENV": "development",
      "NODE_CONFIG_DIR": "./config"
    }
  }
}
